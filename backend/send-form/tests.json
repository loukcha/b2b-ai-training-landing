      "name": "Test POST with missing fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Missing required fields"
      },
      "bodyMatcher": "partial"
    }
